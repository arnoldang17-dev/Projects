    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        int noOfHours = Integer.parseInt(jTextField1.getText());
        int ratePerHours = Integer.parseInt(jTextField3.getText());
        final double Sss;
        final double pagibig;
        final double tax;
        
        int grossPay =  noOfHours * ratePerHours;
        
        if (grossPay <= 20_000) {
            Sss = grossPay * .01;
            pagibig = grossPay * .005;
            tax = 0;
            
        } else if (grossPay <=29_999) {
            Sss = grossPay * .02;
            pagibig = grossPay * .01;
            tax = grossPay * .02;
            
        } else if (grossPay <=39_999) {
            Sss = grossPay * .03;
            pagibig = grossPay * .015;
            tax = grossPay * .05;
            
        } else if (grossPay <=49_999) {
            Sss = grossPay * .05;
            pagibig = grossPay * .02;
            tax = grossPay * .1;

        } else if (grossPay <=69_999) {
            Sss = grossPay * .07;
            pagibig = grossPay * .05;
            tax = grossPay * .12 + 2_000;

        } else if (grossPay <=79_999) {
            Sss = grossPay * .1;
            pagibig = grossPay * .07;
            tax = grossPay * .15 + 3_000;

        } else if (grossPay <=89_999) {
            Sss = grossPay * .11;
            pagibig = grossPay * .09;
            tax = grossPay * .18 + 4_000;

        } else if (grossPay <=99_999) {
            Sss = grossPay * .15;
            pagibig = grossPay * .1;
            tax = grossPay * .2 + 5_000;

        } else if (grossPay >= 100_000) {
            Sss = grossPay * .15;
            pagibig = grossPay * .1;
            tax = grossPay * .2 + 10_000;

        } else {
            Sss = 0;
            pagibig = 0;
            tax = 0;
        }
        
        final int totalDeduction = (int)(Sss + pagibig + tax);
        final int netPay = grossPay - totalDeduction;
        
        jTextField2.setText(String.valueOf((int)Sss));
        jTextField4.setText(String.valueOf((int)pagibig));
        jTextField6.setText(String.valueOf(grossPay));
        jTextField5.setText(String.valueOf((int)tax));
        jTextField7.setText(String.valueOf(netPay));
        jTextField8.setText(String.valueOf(totalDeduction));
        
    }                                        

